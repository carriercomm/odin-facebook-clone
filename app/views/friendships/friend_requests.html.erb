<div class="form-horizontal">
	<h1>Friend Requests</h1>

	<% if !@friend_requests.empty? %>
		<% @friend_requests.each do |request|%>
		<div class="row request">
			<h4 class="text-primary">	<%= request.user.name %> </h4>
			
			<%= render 'layouts/confirm_request', friendship: request %>
			<%= render 'layouts/decline_request', friendship: request %>
		</div>
		<% end %> 
	<% else %>
		<p>No Friend Requests to speak of!</p>
	<% end %>
</div>